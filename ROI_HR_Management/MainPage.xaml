<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ROI_HR_Management.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    

    <AbsoluteLayout>
        <!-- Background image -->
        <Image Source="roi_background.png" Aspect="AspectFill" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1" />

       
        <StackLayout AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1">
            
            <!-- Display a picture -->
            <Image Source="roi_logo.png" MinimumWidthRequest="150" Aspect="AspectFill"/>

            <!--  Buttons for navigation -->
            <Button Text="Add New Employee" Clicked="AddEmployeeButton_Clicked" TextColor="#c64c38" />
            <Button Text="View Employee Records" Clicked="EmployeeRecordsButton_Clicked" TextColor="#c64c38"/>
            
        </StackLayout>
        
    </AbsoluteLayout>



</ContentPage>
